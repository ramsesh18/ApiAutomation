package com.assurity.rest.test;

import org.testng.annotations.Test;
import org.testng.annotations.BeforeClass;
import org.testng.AssertJUnit;
import static com.jayway.restassured.RestAssured.*;
import com.jayway.restassured.RestAssured;
import com.jayway.restassured.response.Response;

public class App {

  @BeforeClass
  public void setBaseUri () {

    RestAssured.baseURI = "https://maps.googleapis.com";
  }

  @Test
  public void testStatusCode () {
    
    Response res = 
    given ()
    .param ("query", "restaurants in mumbai")
    .param ("key", "AIzaSyCJr_wrirzS14wFERCQMkiLd0IO68S80Os")
    .when()
    .get ("/maps/api/place/textsearch/json");
    
    System.out.println(res.statusCode());
    AssertJUnit.assertEquals (res.statusCode (), 200);
  }

@Test
public void testStatusCodeRestAssured () {

given ().param ("query", "restaurants in mumbai")
        .param ("key", "Xyz")
        .when()
        .get ("/maps/api/place/textsearch/json")
        .then ()
        .assertThat ().statusCode (200);

}
}
